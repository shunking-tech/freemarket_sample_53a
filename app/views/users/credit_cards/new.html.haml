= render 'items/header_guide'

%main.mypage-container.clearfix

  .content
    %section.registration-card
      %h2.registration-card__head.bold
        クレジットカード情報入力

      = form_with url: user_credit_card_path, method: :post, class: 'registration-card__form', id: 'registration-card__form' do |f|
        .registration-card__form__content

          .registration-card__form__content__number
            = f.label "カード番号", class: "bold"
            %span.form-require 必須
            = f.text_field :card_number, {placeholder: "半角数字のみ", maxlength: "19"}
            %ul.card-images
              %li
                = image_tag '/visa.svg', height: '20', width: '49', class: 'card-images__image'
              %li
                = image_tag '/master-card.svg', height: '20', width: '34', class: 'card-images__image'
              %li
                = image_tag '/saison-card.svg', height: '20', width: '30', class: 'card-images__image'
              %li
                = image_tag '/jcb.svg', height: '20', width: '32', class: 'card-images__image'
              %li
                = image_tag '/american_express.svg', height: '20', width: '21', class: 'card-images__image'
              %li
                = image_tag '/dinersclub.svg', height: '20', width: '32', class: 'card-images__image'
              %li
                = image_tag '/discover.svg', height: '20', width: '32', class: 'card-images__image'

          .registration-card__form__content__limit
            = f.label "有効期限", class: "bold"
            %span.form-require 必須
            %br
            .select.half
              = f.select :card_limit_m, options_for_select(limit_m)
              %i.icon-arrow-bottom
              %span 月
            .select.half
              = f.select :card_limit_y, options_for_select(limit_y)
              %i.icon-arrow-bottom
              %span 年

          .registration-card__form__content__securitycode
            = f.label "セキュリテイコード", class: "bold"
            %span.form-require 必須
            = f.text_field :card_securitycode, {placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4"}
            .what-is-securitycode
              %span ?
              カード裏面の番号とは？

          #card_token
          = f.button "追加する", class: 'registration-card__form__content__submit', id: 'registration-card__form__content__submit'

  = render 'users/mypage/side'
  = render 'items/footer_btn'

= render 'items/footer'