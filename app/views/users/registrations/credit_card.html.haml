.registration
  = render "registration_header", status: "支払い方法"
  %main.registration__main
    %section.registration__main__section
      %h2.registration__main__section__head クレジットカード情報入力
      = form_with url: root_path, class: 'registration-card__form' do |f|
        .registration-card__form__content

          .registration-card__form__content__number
            = f.label "カード番号", class: "bold"
            %span.form-require 必須
            = f.text_field :card_number, {placeholder: "半角数字のみ", maxlength: "19"}
            %ul.card-images
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg', height: '20', width: '49', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg', height: '20', width: '34', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg', height: '20', width: '30', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg', height: '20', width: '32', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg', height: '20', width: '21', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg', height: '20', width: '32', class: 'card-images__image'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg', height: '20', width: '32', class: 'card-images__image'

          .registration-card__form__content__limit
            = f.label "有効期限", class: "bold"
            %span.form-require 必須
            %br
            .select.half
              = f.select :card_limit_m, options_for_select(limit_m)
              %i.icon-arrow-bottom
              %span 月
            .select.half
              = f.select :card_limit_y, options_for_select(limit_y)
              %i.icon-arrow-bottom
              %span 年

          .registration-card__form__content__securitycode
            = f.label "セキュリテイコード", class: "bold"
            %span.form-require 必須
            = f.text_field :card_securitycode, {placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4"}

          = f.button "追加する", class: 'registration-card__form__content__submit'
  = render "shared/reg_and_session_footer", current_page: nil