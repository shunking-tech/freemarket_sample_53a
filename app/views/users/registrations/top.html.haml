.registration
  %header.registration__header
    = render 'shared/reg_and_session_header'
  %main.registration__main
    %section.registration__main__section
      %h2.registration__main__section__head 新規会員登録
      .registration-form.registration-form--top
        .registration-form__content
          = link_to sign_up_path, class: "registration-form__content__btn registration-form__content__btn--mail", data: {turbolinks: false} do
            = fa_icon "envelope"
            メールアドレスで登録する
          - if Rails.env.development?
            = link_to user_facebook_omniauth_authorize_path, method: :post, class: "registration-form__content__btn registration-form__content__btn--facebook" do
              = fa_icon "facebook-square"
              Facebookで登録する
            = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "registration-form__content__btn registration-form__content__btn--google" do
              = image_tag '/google-logo.png', width: "26px", height: "26px", class: "registration-form__content__btn--google--logo"
              Googleで登録する
          - else
            = link_to root_path, method: :post, class: "registration-form__content__btn registration-form__content__btn--facebook" do
              = fa_icon "facebook-square"
              Facebookで登録する
            = link_to root_path, method: :post, class: "registration-form__content__btn registration-form__content__btn--google" do
              = image_tag '/google-logo.png', width: "26px", height: "26px", class: "registration-form__content__btn--google--logo"
              Googleで登録する
  = render "shared/reg_and_session_footer", current_page: "top"