= render 'items/header_guide';

.recommended
  .main
    .main__box
      .main__slideshow
        .main__slideshow__frame
          %ul.main__slideshow__list
            %li.main__slideshow__list__slide
              = link_to root_path do
                .active
        .main__slideshow__left
          .main__slideshow__left__box

        .main__slideshow__right
          .main__slideshow__right__box

        .main__slideshow__button
          .main__slideshow__button__box
            %span
            %span
            %span

  .main__category
    %h2 人気のカテゴリー
    .main__category__Heading
      %ul.main__category__Heading__list
        - @categories.each do |category|
          %li= link_to category.name,"##{category.id}"

  .main__product
    - @categories.each do |category| 
      .main__product__contener
        .main__product__contener__name{id: category.id}
          %h3=category.name
          = link_to "もっと見る ", category_path(category), class:"more_see"

        = render partial: category, locals: { limit: 10 }

= render 'items/footer';
= render 'items/footer_btn';